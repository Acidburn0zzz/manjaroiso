		sed -i 's#Identifier "evdev keyboard catchall".*#&\n        Option "XkbLayout" "la-latin1"#'       ${DESTDIR}/etc/X11/xorg.conf.d/10-evdev.conf
                sed -i -e 's/^.*KEYMAP=.*/KEYMAP=la-latin1/' ${DESTDIR}/etc/vconsole.conf

